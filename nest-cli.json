{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps",
  "compilerOptions": {
    "deleteOutDir": false,
    "webpack": false,
    "tsConfigPath": "./tsconfig.build.json"
  },
  "monorepo": true,
  "root": "apps",
  "projects": {
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user/tsconfig.app.json"
      }
    },
    "dataPull": {
      "type": "application",
      "root": "apps/dataPull",
      "entryFile": "main",
      "sourceRoot": "apps/dataPull/src",
      "compilerOptions": {
        "tsConfigPath": "apps/dataPull/tsconfig.app.json"
      }
    },
    "food": {
      "type": "application",
      "root": "apps/food",
      "entryFile": "main",
      "sourceRoot": "apps/food/src",
      "compilerOptions": {
        "tsConfigPath": "apps/food/tsconfig.app.json"
      }
    },
    "system": {
      "type": "application",
      "root": "apps/system",
      "entryFile": "main",
      "sourceRoot": "apps/system/src",
      "compilerOptions": {
        "tsConfigPath": "apps/system/tsconfig.app.json"
      }
    },
    "ledger": {
      "type": "application",
      "root": "apps/ledger",
      "entryFile": "main",
      "sourceRoot": "apps/ledger/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ledger/tsconfig.app.json"
      }
    },
    "swagger-aggregator": {
      "type": "application",
      "root": "apps/swagger-aggregator",
      "entryFile": "main",
      "sourceRoot": "apps/swagger-aggregator/src",
      "compilerOptions": {
        "tsConfigPath": "apps/swagger-aggregator/tsconfig.app.json"
      }
    }
  }
}
