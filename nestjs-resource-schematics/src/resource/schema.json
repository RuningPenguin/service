{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ResourceSchema",
  "title": "Resource Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Resource name (e.g. user)"
    },
    "path": {
      "type": "string",
      "description": "Target path to create files",
      "default": ""
    }
  },
  "required": [
    "name"
  ]
}
